<%= form_for([@bike, @bike.build_auction], :url => bike_auction_index_path(@bike)) do |f| %>

    <p>
      <%= f.label 'Start price' %><br>
      <%= f.text_field :current_amount %>
    </p>

    <p>
      <%= f.label :endtime %><br>
      <%= f.datetime_select :endtime, :ampm => false %>
    </p>

    <div class="actions">
      <%= f.submit 'Create Auction', class: "btn btn-success" %>
    </div>
<% end %>