<%= form_for @bike do |f| %>
    <% if @bike.errors.any? %>
        <div class="alert alert-danger">
          <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
          <h3><%= pluralize(@bike.errors.count, "error") %> prohibited this bike from being saved:</h3>
          <ul>
            <% @bike.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="row col-md-6">

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :brand %>
      <%= f.text_field :brand, class:"form-control" %>
    </div>

    <% c = [
            ['Blue'],
            ['Green'],
            ['Yellow'],
            ['Red'],
            ['Orange'],
            ['White'],
            ['Black'],
            ['Grey'],
            ['Violet'],
            ['Brown']
    ]
    %>
    <div class="form-group">
      <%= f.label :color %>
      <%= f.select(:color, c, {class: "form-control"}) %>
    </div>

    <div class="form-group">
      <%= f.label 'Weight (kg)' %>
      <%= f.number_field(:weight, {min: 0, step: 0.01, class:"form-control"}) %>
    </div>

    <% o = [
                    ['Lead Acid'],
                    ['Nickel Cadmium (NiCa)'],
                    ['Nickel Metal Hydride (NiMH)'],
                    ['Lithium Polymer'],
                    ['Lithium Manganese'],
                    ['Lithium Iron Phosphate (LiFePO4)']
            ]
    %>
    <div clsas="form-group">
      <%= f.label :batterytype %><br>
      <%= f.select(:batterytype, o, {class:"form-cotrol"}) %>
    </div>

    <div class="form-group">
      <%= f.label :kwh %><br>
      <%= f.number_field(:kwh, {in:0..100, step: 0.1, class:"form-control"}) %>
    </div>
    <div class="form-group">
      <%= f.label 'Max speed (km/h)' %><br>
      <%= f.number_field(:maxspeed, {min: 0, step: 0.1, class:"form-control"}) %>
    </div>

    <div class="form-group">
      <%= f.label 'Charging time (hours)' %><br>
      <%= f.number_field(:chargingtime, {step: 1, class:"form-control"}) %>
    </div>

    <p>
      <%= f.submit({class:"btn btn-success"}) %>
    </p>
    </div>

<% end %>