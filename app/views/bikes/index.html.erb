<h1>Bikes<small class="small-title">Overview</small></h1>

<%= button_to 'Create New Bike', new_bike_path, class: "btn btn-success pull-right" , :method => :get%>

<%= form_tag(bikes_path, :method => "get", id: "search-form") do %>
      <%= text_field_tag :search, params[:search], placeholder: "Search Bikes" %>
      <!-- In order to have the "search" icon int the button, we need to use plain HTML instead
           of using a Rails form helper -->
      <button type="submit" class="btn btn-info">Search</button> <%= link_to 'Clear search', bikes_path %>
<% end %>


  <table class="table table-striped table-hover table-condensed table-responsive"><br>
  <tr>
    <th></th>
    <th>Name</th>
    <th>Brand</th>
    <th>Owner</th>
    <th></th>
  </tr>

  <% @bikes.each do |bike| %>
      <tr>
        <td><% if bike.pictures.count > 0 %>
              <%= render :partial => "pictures/picture_index", :locals => {:picture => bike.pictures[0]} %>
          <% end %>
        </td>
        <td><%= bike.name %></td>
        <td><%= bike.brand %></td>
        <td><%= bike.user.email %></td>
        <td>
          <%= button_to 'Show', bike_path(bike), class: "btn-xs btn-info" , :method => :get%>
          <% if is_own_bike(bike) %>
              <% if bike.auction.nil? %>
                  <%= button_to 'Start Auction', new_bike_auction_path(bike), class: "btn-xs btn-success" , :method => :get%>
              <% else %>
                  <%= button_to 'Show Auction', auction_path(bike.auction), class: "btn-xs btn-info" , :method => :get%>
              <% end %>
              <%= button_to 'Edit', edit_bike_path(bike), class: "btn-xs btn-info" , :method => :get%>
              <%= button_to('Destroy', bike_path(bike),
                                method: "delete", data: { confirm: 'Are you sure?' }, class: 'btn-xs btn-danger'  ) %>
          <% end %>
        </td>
      </tr>
  <% end %>
</table>